        <form asp-controller="DetailProject" asp-action="Create" method="post">
            <!-- Input ID-->
            <input value="@Model.project.T_WOMEYE_PROJECT_UID" name="projectUID" id="projectUID" type="hidden" />
            <button class="btn btn-success btn-icon-split" style="margin:20px;">
                <span class="icon text-white-50">
                    <i class="fas fa-solid fa-plus"></i>
                </span>
                <span class="text">Add Data</span>
            </button>
        </form>

        <div class="table-responsive">

            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead style="text-align: center;">
                    <tr>
                        <th scope="col">NO</th>
                        <th scope="col">PHASE</th>
                        <th scope="col" style="white-space: nowrap;">START DATE</th>
                        <th scope="col" style="white-space: nowrap; padding: 15px 30px 15px 30px">END DATE</th>
                        <th scope="col" style="white-space: nowrap;">REALIZATION START DATE</th>
                        <th scope="col" style="white-space: nowrap;">REALIZATION END DATE</th>
                        <th scope="col" style="white-space: nowrap;">G-SUITE LINK</th>
                        <th scope="col">STATUS</th>
                        <th scope="col" style="white-space: nowrap;">INFO</th>
                        <th scope="col" style="white-space: nowrap; padding: 15px 60px 15px 60px;">ACTION</th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 1; i < Model.detailProject.Count; i++)
                    {

                        <tr>
                            <td>@i</td>
                            <td>@Model.detailProject[i].TAHAP</td>
                            <td>@Model.detailProject[i].START_DT</td>
                            <td>@Model.detailProject[i].END_DT</td>
                            <td>@Model.detailProject[i].REALIZATION_START_DT</td>
                            <td>@Model.detailProject[i].REALIZATION_END_DT</td>
                            <td>
                                <a href="@Model.detailProject[i].DOKUMEN">
                                    @Model.detailProject[i].DOKUMEN
                                </a>
                            </td>
                            <td>@Model.detailProject[i].STATUS_PROJECT</td>
                            <td>@Model.detailProject[i].KETERANGAN</td>

                            <td>

                                @if (Model.detailProject[i].IS_ACCESS == "TRUE")
                                {
                                    <form asp-controller="DetailProject" asp-action="Edit" method="post">
                                        <!-- Input ID-->
                                        <input type="hidden" name="uid" id="uid" value="@Model.detailProject[i].T_WOMEYE_DETAIL_PROJECT_UID" />
                                        <button class="btn btn-warning btn-sm" style="float:left;"><i class="fa fa-edit"></i> Update</button>
                                    </form>


                                    <form asp-controller="Note" asp-action="Index" method="post">
                                        <!-- Input ID-->
                                        <input type="hidden" name="uid" id="uid" value="@Model.detailProject[i].T_WOMEYE_DETAIL_PROJECT_UID" />
                                        <input type="hidden" name="tahap" id="tahap" value="@Model.detailProject[i].TAHAP" />
                                        <button class="btn btn-success btn-sm" style="float:right;"><i class="fa fa-envelope"></i> Note</button>
                                    </form>
                                }

                            </td>

                        </tr>
                    }
                </tbody>

            </table>



        </div>
    </div>
</div>

