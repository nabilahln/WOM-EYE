@section Scripts{
    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }

        function openErrorModal(strMessage) {
            var myDiv = document.getElementById("MyModalErrorAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalError').modal('show');
        }

        $(document).ready(function () {
            var code = "@Model.responseCodeProject";
            var msg = "@Model.responseMessageProject" + "@Model.errorMessageProject";
            if (code === "200") {
                //openSuccessModal(msg);
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: msg
                });
            } else if(code === "401" || code === "500")
            {
                    //openSuccessModal(msg).style.visibility = 'hidden';
                    //openErrorModal("Insert Failed: " + msg);
                Swal.fire({
                    icon: 'error',
                    title: 'Insert Failed',
                    text: msg
                });

            }
        });
    </script>


    <script>
        var toggleCheckbox = document.getElementById("mycheckbox");
        var checkboxToHide = document.getElementById("hidediv");

        // Add event listener to toggle checkbox
        toggleCheckbox.addEventListener("change", function () {
            if (toggleCheckbox.checked) {
                // If the toggle checkbox is checked, hide the checkbox to hide
                checkboxToHide.style.display = "block";
            } else {
                // If the toggle checkbox is not checked, show the checkbox to hide
                checkboxToHide.style.display = "none";
            }
        });

    </script>






    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
