@model WOM_EYE.Models.Login.ForgetPasswordModel

@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    //ViewData["responseMessage"] = Model.responseMessage;

}



<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">



    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css" />

</head>

<body class="bg-gradient-primary">

    
    <div class="row justify-content-center">

        <div class="col-md-5">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="p-5">



                                <div class="mb-5">
                                    <img src="~/womeye3.png" class="rounded mx-auto d-block" alt="womeye" style="width:150px; height:150px; margin-bottom:0px; margin-top:0px;">

                                </div>

                                <div id="login-modal" class="modal">
                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <span class="close">&times;</span>
                                        <p id="response-message"></p>
                                    </div>
                                </div>

                                <!-- Form Forget Password -->
                                <form asp-action="ForgetPassword" method="post" asp-controller="Login" class="user">

                                    <!-- Input USER_ID -->
                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="USER_ID" class="form-label"></label>
                                        <input id="signinId" asp-for="USER_ID" class="form-control form-control-user" autofocus />
                                        <span asp-validation-for="USER_ID" class="text-danger"></span>
                                    </div>

                                    <!-- Input NIK EMP -->
                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="NIK_EMP" class="form-label"></label>
                                        <input id="signinId" asp-for="NIK_EMP" class="form-control form-control-user" autofocus />
                                        <span asp-validation-for="NIK_EMP" class="text-danger"></span>
                                    </div>

                                    <!-- Input NO TELP -->
                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="CODE_UNIQUE" class="form-label"></label>
                                        <input id="signinId" asp-for="CODE_UNIQUE" class="form-control form-control-user" autofocus />
                                        <span asp-validation-for="CODE_UNIQUE" class="text-danger"></span>
                                    </div>

                                    <!-- Input Password Baru -->
                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="USER_PASS" class="form-label"></label>
                                        <input id="signinPwd" asp-for="USER_PASS" class="form-control form-control-user" type="password" />
                                        <span asp-validation-for="USER_PASS" class="text-danger"></span>
                                    </div>

                                    <!-- Input Confirm Password -->
                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="ConfirmPass" class="form-label"></label>
                                        <input id="signinPwd" asp-for="ConfirmPass" class="form-control form-control-user" type="password" />
                                        <span asp-validation-for="ConfirmPass" class="text-danger"></span>
                                    </div>

                                    <!-- Button -->
                                    <a><input type="submit" value="Update Password" class="btn btn-primary btn-user btn-block" @*id="login-btn"*@ onclick="loginvalidation()" data-toggle="modal" data-target="#loginmodal" /></a>

                                    <!--region Area Response-->
                                    @*@if (Model.responseCode != "xx")
                                        {
                                            <center>
                                                <p class="text-danger">@Model.responseMessage</p>
                                            </center>
                                        }*@


                                </form>




                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>

    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }

        function openErrorModal(strMessage) {
            var myDiv = document.getElementById("MyModalErrorAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalError').modal('show');
        }

        $(document).ready(function () {
            var code = "@Model.responseCode";
            var msg = "@Model.responseMessage" ;
            if (code == "502" || code == "501" || code == "500") {
                //openErrorModal("Login Failed : " + msg + ", Harap perbarui password");
                Swal.fire({
                    icon: 'error',
                    title: 'Login Failed',
                    text: msg
                });
            }

        });
    </script>
</body>

</html>
