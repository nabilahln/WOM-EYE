                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="USER_PASS" class="form-label"></label>
                                        <input id="signinPwd" asp-for="USER_PASS" class="form-control form-control-user" type="password" />
                                        <span asp-validation-for="USER_PASS" class="text-danger"></span>
                                    </div>

                                    <!-- Button -->
                                    <a><input type="submit" value="Login" class="btn btn-primary btn-user btn-block" @*id="login-btn"*@ onclick="loginvalidation()" data-toggle="modal" data-target="#loginmodal" /></a>

