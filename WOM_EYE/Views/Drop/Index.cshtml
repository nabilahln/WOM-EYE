@model WOM_EYE.Models.Drop.DropModel

@{
    ViewData["Title"] = "Drop";
    ViewData["responseCodeDrop"] = Model.responseCodeDrop;
}

<!-- #region Area Response -->
<div>
    <div style="height:20px;width:60%;margin-left:auto">
        @if (@Model.responseCodeDrop == "200")
        {
            <span class="alert-success" style="border-radius:5px; padding:3px; float:right">
                @Model.responseMessageDrop
            </span>
        }
        else
        {
            if (@Model.responseCodeDrop != null && @Model.responseCodeDrop != "xx")
            {
                <span class="alert-danger" style="border-radius:5px; padding:3px; float:right">
                    Update Failed : @Model.responseMessageDrop
                </span>
            }

        }
    </div>
</div>


<!DOCTYPE html>
<html lang="en">

<head>


    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<body>
    <h3>DATA DROP PROJECT</h3>
    <hr />
    <br />
    <p>

    </p>
    <div class="card shadow mb-4">
        <div class="card-body" style="font-size: 16px;">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PROJECT_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ALASAN)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.ListDrop.Count; i++)
                    {
                        <tr>
                            @*<td>@Html.DisplayFor(model => model.ListDrop[i].T_WOMEYE_DROP_ID)</td>*@
                            <td>@i</td>
                            <td>@Html.DisplayFor(x => x.ListDrop[i].PROJECT_ID)</td>
                            <td>@Html.DisplayFor(x => x.ListDrop[i].ALASAN)</td>
                            <td>
                                @if (Model.ListDrop[i].IS_DROP == "TRUE")
                                {
                                    <form asp-controller="Drop" asp-action="UnDrop" method="post" id="undropForm">
                                        <!-- Input ID-->
                                        <input value="@Model.ListDrop[i].T_WOMEYE_DROP_ID" name="dropId" id="dropId" type="hidden" type="hidden" />
                                        <button class="btn btn-danger btn-sm" id="undropBtn" onclick="confirmUndrop(event)">Undrop</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal HTML structure -->
    <div class="modal fade" id="undropModal" tabindex="-1" role="dialog" aria-labelledby="undropModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="undropModalLabel">Confirm Undrop</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to undrop this form?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" form="undropForm" class="btn btn-danger">Undrop</button>
                </div>
            </div>
        </div>
    </div>



    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

